@*@model IEnumerable<VegeFoods.Models.BD_VegeFoods.Category>*@
@model PagedList.IPagedList<VegeFoods.Models.BD_VegeFoods.Category>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Category List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <a href="~/Admin/Category/Create" class="btn btn-success" style="margin-bottom:15px">Create</a>
</div>

<div class="card">
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr id="row_@item.ID">
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Ajax.ActionLink("Delete", "Delete", new { id = item.ID }, new AjaxOptions
                   {
                       Confirm = "Do you want to delete this record ?",
                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                       HttpMethod = "Delete"
                   })
                </td>
            </tr>
        }

    </table>
</div>

<div style="font-size: 20px; display: flex; justify-content: center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>